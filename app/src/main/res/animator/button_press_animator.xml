<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set android:ordering="together"> <objectAnimator
            android:propertyName="scaleX"
            android:duration="100" android:valueTo="0.96" android:interpolator="@android:anim/decelerate_interpolator"
            android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="100"
                android:valueTo="0.96"
                android:interpolator="@android:anim/decelerate_interpolator"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="alpha"
                android:duration="75"
                android:valueTo="0.85"
                android:interpolator="@android:anim/decelerate_interpolator"
                android:valueType="floatType"/>
        </set>
    </item>
    <item android:state_pressed="false">
        <set android:ordering="together">
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="150"
                android:valueTo="1.0"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="150"
                android:valueTo="1.0"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="alpha"
                android:duration="100"
                android:valueTo="1.0"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:valueType="floatType"/>
        </set>
    </item>
    <item>
        <set android:ordering="together">
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="0" android:valueTo="1.0"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="0"
                android:valueTo="1.0"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="alpha"
                android:duration="0"
                android:valueTo="1.0"
                android:valueType="floatType"/>
        </set>
    </item>
</selector>